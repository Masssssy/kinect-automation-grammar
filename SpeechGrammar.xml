<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    
    <one-of>      
      <item>
        <tag>ENABLE</tag>
        <one-of>
          <item>enable <ruleref uri="#devices"/></item>
          <item>turn on <ruleref uri="#devices"/></item>
          <item>activate <ruleref uri="#devices"/></item>
          <item>turn onn <ruleref uri="#devices"/> </item>
        </one-of>
      </item>

      <item>
        <tag>DISABLE</tag>
        <one-of>
          <item>disable <ruleref uri="#devices"/></item>
          <item>turn off <ruleref uri="#devices"/></item>
        </one-of>
      </item>

      <item>
        <tag>DIM</tag>
        <one-of>
          <item>dim <ruleref uri="#dimmers"/></item>
        </one-of>
      </item>

      <item>
        <tag>Set color</tag>
        <one-of>
          <item>
            Set color of <ruleref uri="#colorlights"/>
          </item>
        </one-of>
      </item>

      <item>
        <tag>What is</tag>
        <one-of>
          <item>What is <ruleref uri="#whatis"/></item>
        </one-of>
      </item>

      <item>
        <tag>Kodi</tag>
        <one-of>
          <item>Kodi <ruleref uri="#kodi_actions"/></item>
          <item>Codee <ruleref uri="#kodi_actions"/></item>
        </one-of>
      </item>

      <item>
        <tag>Thank you</tag>
        <one-of>
          <item>Thank you</item>
          <item>Thanks</item>
        </one-of>
      </item>
      
    </one-of>
  </rule>

  <rule id="devices">
    <one-of>
    <item>
      <tag>DESK LIGHT</tag>
      <one-of>
        <item>desk light</item>
        <item>desk lamp</item>
        <item>lamp on desk</item>
      </one-of>
    </item>
    <item>
      <tag>COUCH LIGHT</tag>
      <one-of>
        <item>couch light</item>
        <item>couch lamp</item>
        <item>couch led</item>
      </one-of>
    </item>
    <item>
      <tag>MAIN LIGHT</tag>
      <one-of>
        <item>main light</item>
        <item>main lamp</item>
        <item>ceiling light</item>
      </one-of>
    </item>
    </one-of>
  </rule>

  <rule id="dimmers">
    <one-of>
      <item>
        <tag>MAIN LIGHT</tag>
        <one-of>
          <item>main light</item>
          <item>main lamp</item>
          <item>ceiling light</item>
        </one-of>
      </item>
    </one-of>
    
    to
    
    <one-of>
      <item>ten percent</item>
      <item>twenty percent</item>
      <item>thirty percent</item>
      <item>fourty percent</item>
      <item>fifty percent</item>
      <item>sixty percent</item>
      <item>seventy percent</item>
      <item>eighty percent</item>
      <item>ninety percent</item>
      <item>a hundred percent</item>
    </one-of>

  </rule>

  <rule id="colorlights">
    <one-of>
      <item>
        <tag>MAIN LIGHT</tag>
        <one-of>
          <item>main light</item>
          <item>main lamp</item>
          <item>ceiling light</item>
        </one-of>
      </item>
    </one-of>

    to

    <one-of>
      <item>normal</item>
      <item>red</item>
      <item>green</item>
      <item>orange</item>
      <item>yellow</item>
      <item>blue</item>
      <item>purple</item>
    </one-of>

  </rule>

  <rule id="whatis">
    <one-of>
      <item>
        <tag>Clock</tag>
        <one-of>
          <item>the time</item>
          <item>the clock</item>
        </one-of>
      </item>
      <item>
        <tag>Temperature</tag>
        <one-of>
          <item>the temp</item>
          <item>the temperature</item>
        </one-of>
      </item>
    </one-of>

  </rule>

  <rule id="kodi_actions">
    <one-of>
      <item>
        <tag>Play</tag>
        <one-of>
          <item>play</item>
        </one-of>
      </item>
      <item>
        <tag>Pause</tag>
        <one-of>
          <item>pause</item>
        </one-of>
      </item>
    </one-of>

  </rule>
  
</grammar>